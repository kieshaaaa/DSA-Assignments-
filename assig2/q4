#include <iostream>
#include <string>
using namespace std;

int main() {
  string s1 = "Hello ";
  string s2 = "World";
  s1 += s2;
  cout << "Concatenated: " << s1 << "\n";
}

//4b:

#include <iostream>
#include <string>
using namespace std;

int main() {
  string s = "Hello";
  int i = 0, j = s.size() - 1;
  while (i < j) {
    swap(s[i], s[j]);
    i++;
    j--;
  }
  cout << "Reversed: " << s << "\n";
}
// 4c:
#include <iostream>
#include <string>
using namespace std;

bool isVowel(char c) {
  c = tolower(c);
  return (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u');
}

int main() {
  string s = "Hello World";
  int write = 0;
  for (int read = 0; read < s.size(); read++) {
    if (!isVowel(s[read])) {
      s[write++] = s[read];
    }
  }
  s.resize(write);
  cout << "Without vowels: " << s << "\n";
}
//4d:
#include <algorithm>
#include <iostream>
#include <string>
using namespace std;

int main() {
  string arr[] = {"banana", "apple", "cherry", "date"};
  int n = 4;

  sort(arr, arr + n);

  cout << "Sorted strings:\n";
  for (int i = 0; i < n; i++)
    cout << arr[i] << "\n";
}
//4e:
#include <iostream>
using namespace std;

int main() {
  char ch = 'A';
  if (ch >= 'A' && ch <= 'Z') {
    ch = ch - 'A' + 'a';
  }
  cout << "Lowercase: " << ch << "\n";
}
